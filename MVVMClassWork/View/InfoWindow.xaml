<Window x:Class="MVVMClassWork.View.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMClassWork.View"
        mc:Ignorable="d"
        Title="InfoWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="FirstNameBlock" FontSize="20" Margin="30,10"/>
        <TextBlock Grid.Row="1" Name="LastNameBlock" FontSize="20" Margin="30,10"/>
        <Button Grid.Row="2" Content="OK" Margin="40,10" Click="Button_Click"/>
    </Grid>
</Window>
